/* header */
.header {
    border-right: 0.1rem solid $grey;

    .header-inner {
        box-shadow: none;

        .site-brand-container {
            padding: 25px 10px;
            background-color: inherit;
            border-bottom: 1px solid $grey;
            box-shadow: none;

            .site-nav-toggle, .site-nav-right {
                .toggle {
                    &:hover {
                        cursor: pointer;
                    }

                    .toggle-line {
                        background: var(--brand-color);
                    }
                }
            }

            .site-meta {
                .site-subtitle {
                    color: $text-color;

                    +mobile() {
                        margin-top: 5px;
                    }
                }

                +mobile() {
                    display: flex;
                    align-content: center;
                    justify-content: center;
                }

                +tablet-mobile() {
                    padding: 0;
                }
            }
        }
    }

}


/* header > menu */
.menu {
    .menu-item {
        font-family: $font-family-logo;

        .badge {
            background-color: $orange;
            font-weight: 400;
            font-family: $font-family-base;
        }

        .menu-item-active {
            .badge {
                animation-name: pulse;
                animation-duration: 1.5s;
                animation-iteration-count: infinite;
            }    
        }

        .fa-none {
            display: none;
        }
    }
}


/* header > sidebar */
.sidebar {
    background-color: $content-bg-color;
    margin-top: 0;
    top: 0;

    .sidebar-inner {
        box-shadow: none;
        padding: 0;
        border-bottom: 1px solid $grey;

        .sidebar-nav {
            border-top: 1px solid $grey;
            padding: 10px 0;

            .site-state-wrap {
                .site-state {
                    .site-state-item {
                        .site-state-item-name {
                            text-transform: uppercase;  
                        }
                    }
                }
            }
        }
        .sidebar-panel {
            border-top: 1px solid $grey;
            padding: 20px 0;
            font-family: $font-family-logo;

            .links-of-author {
                .links-of-author-item {
                    a {
                        padding: 5px 0;
                    }
                }
            }
        }
        .back-to-top {
            background-color: $lightgrey;

            &.back-to-top-on {
                margin: 0;
                padding-top: 10px;
                padding-bottom: 5px;
                border-top: 1px solid $grey;
            }
        }
        .post-toc {
            ol {
                padding-left: 15px;
            }
        }
    }
}

@keyframes pulse {
  from {
    transform: scale(1);
  }
  50% {
    transform: scale(0.9);
  }
  to {
    transform: scale(1);
  }
}