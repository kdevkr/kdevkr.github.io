$font-famaily-post-title = 'Pretendard-Medium';
$font-famaily-post-headings = 'Pretendard-Medium';
$font-famaily-post-content = 'Pretendard-Regular', 'Noto Sans KR';

/* archive */
.archive {
  .post-block {
    .collection-year {
      margin-top: 0.8rem;
      margin-bottom: 0;

      &:before {
        background-color: $grey-dark;
      }
    }

    .post-header {
      margin-top: 1em;
    }
    .post-content {
      // margin-bottom: 0;
    }
  }
}

.post-block {
  line-height: 1.5;
  
  +mobile() {
    padding: 1rem;
  }
}

.main-inner > .post-block,
.main-inner > .comments:not(:first-child):not(.sub-menu) {
  box-shadow: none;
}

.post-body {
    letter-spacing: 0.01rem;
    line-height: 2rem;
    word-break: break-all;
    font-family: $font-famaily-post-content;
    font-size: $font-size-headings-base - 0.525em;

    h1 {
      border-top: 1px solid $grey;
      padding: 10px 0px;
      background: $lightgrey;
      text-align: center;
    }
    h1, h2 {
      border-bottom: 1px solid $grey;
    }
    h1, h2, h3 {
      margin-top: 40px;
    }
    h1, h2, h3, h4, h5, h6 {
      font-family: $font-famaily-post-headings;
    }
    .image-caption {
        margin: -10px auto 15px;
    }

    img {
        max-height: 100%;
        margin-top: 40px;
        margin-bottom: 40px;

        &[src*="#hwrap"] {
          width: 100%;
          max-height: 300px;
        }

        &[src*="#compact"] {
          max-height: 200px;
        }
    }

    img + .image-caption {
      margin-top: -20px;
    }

    *:not(pre) > code {
        font-family: inherit;
    }

    p > code {
      color: $black-deep;
      background-color: transparent;
      padding: 0.2rem 0.3rem;
      font-weight: bold;
      font-size: large;
    }
    
    a {
        color: $green;
        border-bottom: 0;
        &:hover {
            text-decoration: underline;
        }
        
        code {
            color: $green;
        }
    }
    strong {
      // color: $text-color;
      +desktop() {
        // font-size: 1rem;
      }
    }

    blockquote {
      background-color: #ededed;
      border-left: none;
      padding: 20px 40px;
      word-break: keep-all;
      margin-bottom: 20px;

      p {
        margin: 0;
      }
    }
}

.post-footer {
  .post-nav {
    padding-top: 20px;  
  }  
}

.posts-collapse .post-content {
  &:before {
    display: none;
  }

  .post-header {
    border-bottom: none;
    padding-left: 0;
    margin-left: 0;
    font-family: $font-famaily-post-title;

    &:before {
      display: none;
    }

    .post-meta-container {
      display: block;

      time {
        color: $snorlax-tongue;
        padding: 2px;
      }
    }
  }

  .collection-title {
    display: none;
  }
  .collection-year {
    font-family: $font-family-headings;
    &:before {
      display: none;
    }
    .collection-header {
      margin-left: 0;
    }
  }
}

.posts-expand {
  .post-meta-container {
    font-family: $font-famaily-post-headings;
  }
  .post-title {
    margin-top: 20px;
    font-family: $font-famaily-post-title;
    font-weight: 600;

    +tablet-desktop() {
      font-size: $font-size-headings-base + 0.5em;
    }
  }
}

.post-toc-wrap {
  .post-toc {
    font-family: $font-family-base;
  }  
}

.comments {
    border-top: 1px solid $grey;
    padding: 20px;
}
