$font-famaily-post-headings = $font-family-logo;
$font-famaily-post-content = 'RIDIBatang';

/* archive */
.archive {
  .post-block {
    .collection-year {
      margin-top: 0.8rem;
      margin-bottom: 0;

      &:before {
        background-color: $grey-dark;
      }
    }

    .post-header {
      margin-top: 1em;
    }
    .post-content {
      // margin-bottom: 0;
    }
  }
}

.post-block {
  line-height: 1.5;
  
  +mobile() {
    padding: 1rem;
  }  
}

.post-body {
    // text-align: inherit;
    letter-spacing: 0.01rem;
    line-height: 2rem;
    word-break: break-all;
    font-family: $font-famaily-post-content;

    h1 {
      border-top: 1px solid $grey;
      padding: 10px 0px;
      background: $lightgrey;
      text-align: center;
    }
    h1, h2 {
      border-bottom: 1px solid $grey;
    }
    h1, h2, h3 {
      margin-top: 40px;
    } 
    .image-caption {
        margin: -10px auto 15px;
    }

    img {
        max-height: 100%;
        margin-top: 40px;
        margin-bottom: 40px;

        &[src*="#hwrap"] {
          width: 100%;
          max-height: 300px;
        }

        &[src*="#compact"] {
          max-height: 200px;
        }
    }

    img + .image-caption {
      margin-top: -20px;
    }

    *:not(pre) > code {
        // font-family: $font-famaily-post-content;
        font-family: inherit;
    }

    code {
      color: $red;
      background-color: $white;
      border: 1px solid $grey;
      padding: 5px;
    }
    
    a {
        color: $green;
        border-bottom: 0;
        &:hover {
            text-decoration: underline;
        }
        
        code {
            color: $green;
        }
    }
    strong {
      color: $snorlax-outer-skin-v2;
    }
}

.posts-collapse .post-content {
  &:before {
    display: none;
  }

  .post-header {
    border-bottom: none;
    padding-left: 0;
    margin-left: 0;
    font-family: $font-famaily-post-headings;

    &:before {
      display: none;
    }

    .post-meta-container {
      display: block;

      time {
        // background-color: $snorlax-tongue;
        color: $snorlax-tongue;
        padding: 2px;
      }
    }
  }

  .collection-title {
    display: none;
  }
  .collection-year {
    font-family: $font-family-headings;
    &:before {
      display: none;
    }
    .collection-header {
      margin-left: 0;
    }
  }
}

.posts-expand {
  .post-meta-container {
    font-family: $font-famaily-post-headings;
  }
  .post-title {
    margin-top: 20px;

    +tablet-desktop() {
      font-size: $font-size-headings-base + 0.5em;
    }
  }
}

.post-toc-wrap {
  .post-toc {
    font-family: $font-family-base;
  }  
}

.comments {
    border-top: 1px solid $grey;
    padding: 20px;
}
